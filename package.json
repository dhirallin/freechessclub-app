{
  "name": "freechessclub",
  "version": "1.1.4",
  "license": "MIT",
  "description": "Free Chess Club: A modern web client for FICS.",
  "main": "src/app.js",
  "scripts": {
    "app": "tsc src/app.ts && node app.js && electron src/app.js",
    "lint": "tslint -c tslint.json --fix -p tsconfig.json",
    "bundle": "webpack --mode production",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "node app.js && electron-builder -mwl -p always",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freechessclub/freechessclub"
  },
  "author": {
    "name": "Free Chess Club Author(s)",
    "email": "support@freechess.club"
  },
  "build": {
    "appId": "club.freechess.FreeChessClub",
    "productName": "Free Chess Club",
    "copyright": "Copyright Â© 2017 Free Chess Club Author(s)",
    "mac": {
      "category": "public.app-category.board-games"
    },
    "linux": {
      "target": [
        "tar.gz",
        "zip"
      ],
      "category": "Game"
    }
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android",
      "ios"
    ]
  },
  "dependencies": {
    "autolink-js": "freechessclub/autolink-js",
    "bootstrap": "v4.0.0-alpha.6",
    "chess.js": "^0.10.2",
    "cordova-android": "^7.1.0",
    "cordova-ios": "^4.5.4",
    "cordova-plugin-whitelist": "^1.3.3",
    "gh-emoji": "^0.2.5",
    "jquery": "^3.2.1",
    "js-cookie": "^2.2.0",
    "oakmac-chessboard": "freechessclub/chessboardjs#update",
    "tether": "^1.4.4"
  },
  "devDependencies": {
    "@types/bootstrap": "^4.1.0",
    "@types/jquery": "^3.3.2",
    "@types/websocket": "^0.0.39",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^0.28.11",
    "electron": "^2.0.1",
    "electron-builder": "^20.13.4",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.11",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  }
}
