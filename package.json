{
  "name": "freechessclub",
  "version": "1.1.1",
  "license": "MIT",
  "description": "Free Chess Club: A modern web client for FICS.",
  "main": "src/app.js",
  "scripts": {
    "app": "tsc src/app.ts && node app.js && electron src/app.js",
    "lint": "tslint -c tslint.json --type-check --fix -p tsconfig.json",
    "bundle": "webpack",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "node app.js && electron-builder -mwl -p always",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freechessclub/freechessclub"
  },
  "author": {
    "name": "Free Chess Club Author(s)",
    "email": "support@freechess.club"
  },
  "build": {
    "appId": "club.freechess.FreeChessClub",
    "productName": "Free Chess Club",
    "copyright": "Copyright Â© 2017 Free Chess Club Author(s)",
    "mac": {
      "category": "public.app-category.board-games"
    },
    "linux": {
      "target": [
        "tar.gz",
        "zip"
      ],
      "category": "Game"
    }
  },
  "dependencies": {
    "autolink-js": "freechessclub/autolink-js",
    "bootstrap": "v4.0.0-alpha.6",
    "chess.js": "^0.10.2",
    "gh-emoji": "^0.2.5",
    "jquery": "^3.2.1",
    "js-cookie": "^2.1.4",
    "oakmac-chessboard": "freechessclub/chessboardjs#update",
    "tether": "^1.4.0"
  },
  "devDependencies": {
    "@types/bootstrap": "^3.3.34",
    "@types/jquery": "^3.2.6",
    "@types/websocket": "^0.0.34",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^0.28.4",
    "electron": "^1.7.5",
    "electron-builder": "^19.24.1",
    "exports-loader": "^0.6.4",
    "file-loader": "^0.11.2",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.2.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0"
  }
}
