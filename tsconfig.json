{
    "compilerOptions": {
//        "noImplicitAny": true,
//        "strictNullChecks": true,
        "removeComments": false, // Don't enable this, we need webpack magic comments and comments are later removed by the minimizer
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "module": "es2022",
        "target": "es2022",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "assets",
	    "app"
    ]
}
